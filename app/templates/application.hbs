{{#bs-navbar type=type backgroundColor=bg collapsed=collapsed onCollapse=(action (mut collapsed) true) onExpand=(action (mut collapsed) false) as |navbar|}}
  <div class="navbar-header">
    {{navbar.toggle}}
    {{#link-to "index" class="navbar-brand"}}ToM{{/link-to}}
  </div>
  {{#navbar.content}}
    {{#navbar.nav as |nav|}}
      {{#nav.item}}{{#nav.link-to "about"}}About{{/nav.link-to}}{{/nav.item}}
      {{#nav.item}}{{#nav.link-to "spots"}}Spots{{/nav.link-to}}{{/nav.item}}
      {{#nav.item}}{{#nav.link-to "home"}}Chip In{{/nav.link-to}}{{/nav.item}}
      {{#nav.item}}{{#nav.link-to "home"}}Contact Us{{/nav.link-to}}{{/nav.item}}
      {{#nav.item}}{{#nav.link-to "home"}}Sign Up{{/nav.link-to}}{{/nav.item}}
      {{#if session.isAuthenticated}}
        {{#nav.item}}
          <a {{action 'invalidateSession'}}>Logout</a>
        {{/nav.item}}
      {{else}}
        {{#nav.item}}{{#nav.link-to "login"}}Log In{{/nav.link-to}}{{/nav.item}}
      {{/if}}
    {{/navbar.nav}}
  {{/navbar.content}}
{{/bs-navbar}}

<div class="main">
  {{outlet}}
</div>



<footer class="footer">
  <span>Made with &#10084; by Takuma</span>
</footer>
